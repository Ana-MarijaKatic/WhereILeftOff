<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Honeydew"
    tools:context=".activities.movie.MoviesBrowse"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/swSearchM"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:iconifiedByDefault="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search Movies..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBrowseMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/swSearchM"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/list_movie_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>